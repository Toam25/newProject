{% extends 'base.html.twig' %}

{% block title %}Vote index{% endblock %}

{% block body %}
    <h1>Vote index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nbr_vote</th>
                <th>Images</th>
                <th>Placement</th>
                <th>Create_at</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vote in votes %}
            <tr>
                <td>{{ vote.id }}</td>
                <td>{{ vote.nbrVote }}</td>
                <td>{{ vote.images }}</td>
                <td>{{ vote.placement }}</td>
                <td>{{ vote.createAt ? vote.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ vote.description }}</td>
                <td>
                    <a href="{{ path('vote_show', {'id': vote.id}) }}">show</a>
                    <a href="{{ path('vote_edit', {'id': vote.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('vote_new') }}">Create new</a>
{% endblock %}
