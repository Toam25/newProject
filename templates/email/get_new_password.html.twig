{% extends 'base.html.twig' %}

{% block title %}toutenone / Nouvelle mot de passe {% endblock %}

{% block stylesheets %}
    {# <link rel="stylesheet" href="{{asset('css/register.css')}}"> #}
{% endblock %}
{% block body %}

<p class="alert" role="alert" style="display: block;width: 100%;text-align: center;position: absolute;top: 0;"></p>

<div class="auth">
    {% if error is defined %}
        <h4 style="color: black;font-weight: bold;">Token invalid </h4>
     {% else %}
          
               <form action="" class="forget_password" >
        <label for="email">Entre votre nouvelle password</label>
        <input type="password" id="last_password" class="form-control" name="new_password" required min="6">
        <input type="hidden" class="token" token="{{token}}">
         <div class="container_btn">
       <button class="btn btn-lg btn-primary btn-submit" type="submit">Envoyer</button>
    </div>
     </form>

    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
	<!--script src="https://hcaptcha.com/1/api.js" async defer></script-->
	<script src="{{asset('js/new_password.js')}}" async defer></script>
{% endblock %}