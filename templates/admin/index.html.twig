{% extends 'base.html.twig' %}

{% block title %} {{ name_boutique }} {% endblock %}
{% block stylesheets %}
<link href="{{ asset('css/bootstrap4.5.css')}}" rel="stylesheet" type="text/css">
    <link href="{{ asset('vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link rel="stylesheet" type="text/css"href=" {{ asset('vendor/datatables/dataTables.bootstrap4.min.css') }}" >
    <link href="{{ asset('toastr/toastr.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('css/admin.css') }}" rel="stylesheet" type="text/css">
  
{% endblock %}
{% block body %}
  
  
 

  <div id="wrapper">

    <!-- Sidebar -->

    {% include ("admin/siderbar.html.twig") %}

    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        {% include ("admin/navbar.html.twig") %}
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">
       {# {% if pages %}
          {% include pages %}
        {% else %}
          {% include ("admin/dependencies/home.html.twig") %}
        {% endif %}
         #}  

        {% if pages == 'new' %}
            {% include "admin/dependencies/new_article.html.twig" %}

        {% elseif pages == 'list' %}
            {% include "admin/dependencies/list.html.twig" %}
        {% elseif pages == 'detail' %}
            {% include ("admin/dependencies/detail.html.twig") %}

        {% elseif pages == 'edit' %}
            {% include ("admin/dependencies/edit.html.twig") %}
        
        {% elseif pages == 'new_user' %}
            {% include ("admin/dependencies/new_user.html.twig") %}
        
        {% elseif pages == 'edition_boutique' %}
            {% include ("admin/dependencies/edition_boutique.html.twig") %}
        
        {% elseif pages == 'list_boutique' %}
            {% include ("admin/dependencies/list_boutique.html.twig") %}
        {% elseif pages == 'new_header' %}
            {% include pages %}
        {% elseif pages == 'list_header' %}
            {% include pages %}
        {% elseif pages == 'list_es' %}
            {% include 'admin/dependencies/es_list.html.twig' %}
        {% elseif pages == 'slider'%}
            {% include 'admin/dependencies/slider.html.twig' %}
        {% elseif pages == 'reference' %}
            {% include 'admin/dependencies/reference.html.twig' %}
            {% include 'admin/dependencies/add_reference_modal.html.twig' %}
        {% elseif pages == 'reseaux' %}
            {% include 'admin/dependencies/reseau.html.twig' %}
        {% elseif pages == 'condition' %}
            {% include 'admin/dependencies/condition.html.twig' %}
        {% else %}
             {% include ("admin/dependencies/home.html.twig") %}
             {% include "admin/dependencies/add_header_modal.html.twig" %}
             {% include "admin/dependencies/view_header_modal.html.twig" %}
        {% endif %}
         
        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
       {% include("admin/footer.html.twig") %}
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>
{% endblock %}

