<div class="modal fade" id="add_reference" tabindex="-1" role="dialog" aria-labelledby="ajout_modal" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="label">Ajout reference</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			{{ form_start(form, {'attr': {'class' : 'form_article add_reference_form','action': path('reference') }}) }}
			<div id="div_ajout_article" class="modal-body row" style="font-weight:none;">
                <div class="col-md-4">
					<div class="preview_image">
						<img id="preview_image">
					</div>
				</div>
				<div class="col-md-8">
				<label>Photo</label>
						{{ form_widget(form.photos, {'attr': {'id' :'file_in', 'class':'file form-control'}}) }}
						{{ form_widget(form.description, {'attr': {'class':'form-control margin-top-5'}}) }}
						
				</div>

			</div>
			<div class="modal-footer">
				<button type="submit" class="btn btn-success margin-top-5">
							Enregistrer
						</button>
			</div>
			{{ form_end(form)}}
		</div>
	</div>
</div>