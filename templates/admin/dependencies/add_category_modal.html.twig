<div class="modal fade" id="ajout_category" tabindex="-1" role="dialog" aria-labelledby="ajout_modal" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="label">Ajout Une category <span id="name_category"></span></h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			{{ form_start(form,{'attr': {'class': 'form_add_category' }}) }}
			<div id="div_add_category" class="modal-body row" style="font-weight:none;">
				{{  form_row(form.name) }}
			</div>
			<div class="modal-footer">
				<button class="submit btn btn-primary btn-submit">Enregistrer</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
</div>
